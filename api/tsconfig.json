{
	"compilerOptions": {
		"outDir": "dist",
		"strict": true,
		"target": "ES5",
		"watch": true,
		"module": "commonjs",
		"noEmitOnError": false,
		"lib": ["ES2015"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node", "jest"]
	},

	"include": [
		"src/*",
		"lib/*",
		"middleware/*",
		"database/*",
		"tests/app.test.ts"
	],
	"exclude": [
		"node_modules/**/*",
		"views/**/*",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
